{
  "model_name": "answerdotai/ModernBERT-base",
  "num_classes": 2,
  "batch_size": 16,
  "dropout": 0.2,
  "freeze_backbone": true,
  "use_pooler": false,
  "use_float16": false,
  "data_dir": "./data",
  "loss_type": "ce",
  "n_epochs": 50,
  "device": "cuda",
  "run_budget": 1.0,
  "rounds_portions": [1.0],
  "strategy_name": "all",
  "strategy_params": {},
  "optimizer_params": {
    "lr": 2e-5
  },
  "metrics": ["accuracy", "f1"],
  "log_dir": "./runs",
  "run_name": "all_with_tuning",
  "checkpoint_dir": "./checkpoints",
  "save_checkpoints": true,
  "max_checkpoints": 3,
  "checkpoint_metric": "val_loss",
  "use_clearml": true,
  "clearml_project_name": "DataEfficiency",
  "clearml_task_name": "all with tuning",
  "enable_hyperparameter_tuning": true,
  "warmup_epochs": 2,
  "tuning_n_iterations": 15,
  "tuning_sample_size": 0.10,
  "tuning_metric": "val_loss"
}