{
  "model_name": "answerdotai/ModernBERT-base",
  "num_classes": 2,
  "batch_size": 16,
  "dropout": 0.2,
  "unfreeze_layers": 6,
  "use_pooler": false,
  "use_float16": false,
  "data_dir": "./data",
  "loss_type": "ce",
  "n_epochs": 70,
  "device": "cuda",
  "run_budget": 1.0,
  "rounds_portions": [1.0],
  "strategy_name": "all",
  "strategy_params": {},
  "optimizer_params": {
    "lr": 2e-5
  },
  "lr_head": 3e-4,
  "lr_backbone": 1e-5,
  "metrics": ["accuracy", "f1"],
  "log_dir": "./runs",
  "run_name": "all_with_tuning",
  "checkpoint_dir": "./checkpoints",
  "save_checkpoints": true,
  "max_checkpoints": 5,
  "checkpoint_metric": "val_loss",
  "use_clearml": true,
  "clearml_project_name": "DataEfficiency",
  "clearml_task_name": "all with tuning",
  "enable_hyperparameter_tuning": true,
  "warmup_epochs": 2,
  "tuning_n_iterations": 20,
  "tuning_sample_size": 0.2,
  "tuning_metric": "val_loss",
  "dropout_range": [0.1, 0.5],
  "lr_range": [1e-5, 1e-3],
  "lr_head_range": [1e-4, 1e-3],
  "lr_backbone_range": [1e-5, 1e-4],
  "weight_decay_options": [0.0, 0.01, 0.1],
  "betas_options": [[0.9, 0.999], [0.95, 0.999], [0.9, 0.99]],
  "unfreeze_layers_options": [3, 6, 9]
}